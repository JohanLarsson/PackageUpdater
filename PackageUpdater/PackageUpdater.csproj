<Project Sdk="Microsoft.NET.Sdk.WindowsDesktop">
  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>netcoreapp3.1</TargetFramework>
    <UseWPF>true</UseWPF>
    <Nullable>enable</Nullable>
    <LangVersion>latest</LangVersion>
  </PropertyGroup>
  
  <PropertyGroup>
    <PublishSingleFile>true</PublishSingleFile>
    <RuntimeIdentifier>win-x64</RuntimeIdentifier>
  </PropertyGroup>

  <PropertyGroup>
    <Authors>Johan Larsson</Authors>
    <Description>Small utility for updating nuget references.</Description>
    <NeutralLanguage>en</NeutralLanguage>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Gu.Analyzers" Version="1.8.2" PrivateAssets="all" />
    <PackageReference Include="Gu.Reactive" Version="4.2.0" />
    <PackageReference Include="Gu.Reactive.Analyzers" Version="0.1.3.13" PrivateAssets="all" />
    <PackageReference Include="Gu.Wpf.Reactive" Version="4.2.0" />
    <PackageReference Include="IDisposableAnalyzers" Version="3.4.3" PrivateAssets="all" />
    <PackageReference Include="Microsoft.CodeAnalysis.FxCopAnalyzers" Version="3.3.1" PrivateAssets="all" />
    <PackageReference Include="Ookii.Dialogs.Wpf" Version="1.2.0" />
    <PackageReference Include="PropertyChangedAnalyzers" PrivateAssets="all" Version="3.2.1" />
    <PackageReference Include="WpfAnalyzers" PrivateAssets="all" Version="3.5.2" />
  </ItemGroup>
</Project>
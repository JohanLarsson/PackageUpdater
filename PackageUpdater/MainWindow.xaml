<Window
    x:Class="PackageUpdater.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:PackageUpdater"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <Window.DataContext>
        <local:ViewModel />
    </Window.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <TextBox Text="{Binding GitDirectory}" />
            <Button
                Grid.Column="1"
                Command="{Binding BrowseForGitDirectoryCommand}"
                Content="..." />
        </Grid>
        <TextBox Grid.Row="1" Text="{Binding PackageId}" />

        <DataGrid
            Grid.Row="2"
            HorizontalContentAlignment="Stretch"
            AutoGenerateColumns="False"
            ItemsSource="{Binding PackageUpdates}">
            <DataGrid.Columns>
                <DataGridTemplateColumn Width="*" Header="Sln">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate DataType="{x:Type local:PackageUpdate}">
                            <TextBlock Text="">
                                <Hyperlink NavigateUri="{Binding Repository.Sln.FullName}" RequestNavigate="OnRequestNavigate">
                                    <Hyperlink.Inlines>
                                        <Run Text="{Binding Repository.Sln.FullName, Mode=OneWay}" />
                                    </Hyperlink.Inlines>
                                </Hyperlink>
                            </TextBlock>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Header="Update package">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate DataType="{x:Type local:PackageUpdate}">
                            <Button
                                Command="{Binding UpdateProcess.UpdateCommand}"
                                Content="Update package"
                                ToolTip="{Binding UpdateProcess.Result}"
                                ToolTipService.ShowOnDisabled="True" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Header="Delete .vs">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate DataType="{x:Type local:PackageUpdate}">
                            <Button Command="{Binding Repository.DeleteDotVsFolderCommand}" Content="Delete .vs" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <Button
                Grid.Column="1"
                Command="{Binding UpdateAllCommand}"
                Content="Update all" />
            <Button
                Grid.Column="2"
                Command="{Binding DeleteAllDotVsFolderCommand}"
                Content="Delete all .vs" />
        </Grid>
    </Grid>
</Window>
